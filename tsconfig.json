{
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": false,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@images/*": ["./assets/images/*"],
      "@fonts/*": ["./assets/fonts/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@styles/*": ["./styles/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"],
      "@store/*": ["./store/*"],
      "@constants/*": ["./constants/*"]
    }
  },
  "include": ["./src"]
}
